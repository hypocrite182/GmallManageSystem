<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee"
    android:id="@+id/base"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="用户信息"
            android:maxWidth="250.0dip"
            android:minWidth="50.0dip"
            android:textColor="#ff2a2a2a"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11.0dip"
            android:gravity="center"
            android:minWidth="50.0dip"
            android:text="保存"
            android:textColor="#ff2a2a2a"
            android:textSize="15.0sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/cut_off_rule"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_alignParentBottom="true"
            android:background="#ff43cd80" />
    </RelativeLayout>
            

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_photoss"
                android:layout_width="100.0dip"
                android:layout_height="100.0dip"
                android:background="@drawable/ic_log" />

            <Button
                android:id="@+id/my_photo"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:text="修改头像"
                android:textSize="14.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <Button
                android:id="@+id/mine_name"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_gravity="center"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/selector_btn_login"
                android:text="用户名"
                android:textColor="@color/text"
                android:textSize="14.0dip" />

            <Button
                android:id="@+id/mine_phone"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_gravity="center"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/selector_btn_login"
                android:text="手机号"
                android:textColor="@color/text"
                android:textSize="14.0dip" />

            <Button
                android:id="@+id/mine_school"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_gravity="center"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/selector_btn_login"
                android:text="学校名称"
                android:textColor="@color/text"
                android:textSize="14.0dip" />

            <Button
                android:id="@+id/mine_sex"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_gravity="center"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/selector_btn_login"
                android:text="性别"
                android:textColor="@color/text"
                android:textSize="14.0dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="20.0dip"
        android:orientation="vertical" >

        <Button
            android:id="@+id/my_relese"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/selector_btn_login"
            android:text="我的发布"
            android:textColor="@color/text"
            android:textSize="18.0dip" />

        <Button
            android:id="@+id/my_user"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/selector_btn_login"
            android:text="修改个人信息"
            android:textColor="@color/text"
            android:textSize="18.0dip" />

        <Button
            android:id="@+id/my_password"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/selector_btn_login"
            android:text="修改密码"
            android:textColor="@color/text"
            android:textSize="18.0dip" />

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="40.0dip"
            android:background="@drawable/selector_btn_login"
            android:text="账户退出"
            android:textColor="@color/text"
            android:textSize="18.0dip" />
    </LinearLayout>

</LinearLayout>